<p id="notice"><%= notice %></p>

<h1>Listing Portfolio Items</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Url</th>
      <th>Github link</th>
      <th>Desc</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @portfolio_items.each do |portfolio_item| %>
      <tr>
        <td><%= portfolio_item.name %></td>
        <td><%= portfolio_item.url %></td>
        <td><%= portfolio_item.github_link %></td>
        <td><%= portfolio_item.desc %></td>
        <td><%= portfolio_item.image %></td>
        <td><%= link_to 'Show', portfolio_item %></td>
        <td><%= link_to 'Edit', edit_portfolio_item_path(portfolio_item) %></td>
        <td><%= link_to 'Destroy', portfolio_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

